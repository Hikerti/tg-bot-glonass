generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String?
  tgId      String?
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user")
}

model Post {
  id        String   @id @default(uuid())
  type      String
  text      String
  interval  String
  dates     String[]
  media     String[]
  active    Boolean
  createdAt DateTime @default(now())

  @@map("posts")
}
